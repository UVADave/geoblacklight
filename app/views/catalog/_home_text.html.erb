<header role="banner">
  <div class="container">
    <div class="row">
      <div class="col-md-12 geoportal">
        <%= content_tag :h1, t('geoblacklight.home.headline') %>
        <%= content_tag :p, t('geoblacklight.home.search_heading'), class: "introduction" %>
      </div>
    </div>
  </div>
</header>

<div class="search-container">
  <div class='container'>
    <div class='row'>
        <div class='col-md-12 search-box'>
          <%= render_search_form_no_navbar %>

          <p class="explanation">Optional: To zoom in on a specific area, hold down the Shift key while drawing the bounding box. To pan the map, click and drag.</p>
        </div>

      <div class='col-md-12'>
        <%#= content_tag :h3, t('geoblacklight.home.map_heading') %>
        <%= content_tag :div, '', id: 'map', data: { map: 'home', 'catalog-path'=> catalog_index_path , 'map-bbox' => params[:bbox], basemap: geoblacklight_basemap } %>
      </div>
    </div>
  </div>
</div>
